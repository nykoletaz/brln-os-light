# Postgres DSN for LND backend
LND_PG_DSN=postgres://lndpg:CHANGE_ME@127.0.0.1:5432/lnd?sslmode=disable

# Postgres DSN for LightningOS notifications (recommended separate DB)
NOTIFICATIONS_PG_DSN=postgres://losapp:CHANGE_ME@127.0.0.1:5432/lightningos?sslmode=disable

# Admin DSN to allow auto-provisioning the notifications DB/user
NOTIFICATIONS_PG_ADMIN_DSN=postgres://losadmin:CHANGE_ME@127.0.0.1:5432/postgres?sslmode=disable

# FSwap API URL (default: https://api.f-swap.com/node)
# Override for local development: http://localhost:3005/node
FSWAP_API_URL=

# FSwap Node API key for boleto payments (must match FSWAP backend's NODE_API_KEY)
FSWAP_NODE_API_KEY=

# FSwap app state (managed by App Store)
FSWAP_APP_INSTALLED=false
FSWAP_APP_ENABLED=false

# Bitcoin remote credentials (filled by wizard)
BITCOIN_RPC_USER=
BITCOIN_RPC_PASS=

# Telegram SCB backup (optional)
NOTIFICATIONS_TG_BOT_TOKEN=
NOTIFICATIONS_TG_CHAT_ID=

# Reports timezone (optional, IANA name like America/Sao_Paulo; empty = system local)
REPORTS_TIMEZONE=

# Web terminal (GoTTY) - installer auto-enables on fresh install
TERMINAL_ENABLED=0
TERMINAL_CREDENTIAL=
TERMINAL_ALLOW_WRITE=1
TERMINAL_PORT=7681
TERMINAL_OPERATOR_USER=losop
TERMINAL_OPERATOR_PASSWORD=
TERMINAL_TERM=xterm
TERMINAL_SHELL=/bin/bash
TERMINAL_WS_ORIGIN=
